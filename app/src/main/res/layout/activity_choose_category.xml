<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="perchello.hangman.UI.chooseCategoryActivity"
    android:background="@drawable/papertexture">

    <TextView
        android:text="Choose category: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:id="@+id/chooseGameModeTextView"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Animals"
        android:id="@+id/chooseModeButton1"
        android:layout_below="@+id/chooseGameModeTextView"
        android:layout_alignRight="@+id/chooseGameModeTextView"
        android:layout_alignEnd="@+id/chooseGameModeTextView"
        android:layout_alignLeft="@+id/chooseGameModeTextView"
        android:layout_alignStart="@+id/chooseGameModeTextView"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Countries"
        android:id="@+id/chooseModeButton2"
        android:layout_below="@+id/chooseModeButton1"
        android:layout_alignRight="@+id/chooseModeButton1"
        android:layout_alignEnd="@+id/chooseModeButton1"
        android:layout_alignLeft="@+id/chooseModeButton1"
        android:layout_alignStart="@+id/chooseModeButton1"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Random words"
        android:id="@+id/catButton3"
        android:layout_below="@+id/chooseModeButton2"
        android:layout_alignRight="@+id/chooseModeButton2"
        android:layout_alignEnd="@+id/chooseModeButton2"
        android:layout_alignLeft="@+id/chooseModeButton2"
        android:layout_alignStart="@+id/chooseModeButton2"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/usernameTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Welcome Guest!"
        android:textSize="18sp"
        android:singleLine="true"
        android:textColor="@android:color/black"/>

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your score is"
        android:id="@+id/scoreTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/adventurer"
        android:layout_toLeftOf="@+id/chooseModeButton1"
        android:layout_toStartOf="@+id/chooseModeButton1"
        android:layout_below="@+id/usernameTextView"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
