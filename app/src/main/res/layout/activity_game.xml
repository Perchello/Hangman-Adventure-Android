<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="perchello.hangman.UI.singlehangman.GameActivity"
    android:focusable="false"
    android:background="@drawable/papertexture"
    android:keepScreenOn="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tries left: "
        android:id="@+id/triesTextView"

        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tTextView"
        android:layout_alignStart="@+id/tTextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Word"
        android:id="@+id/progressTextView"
        android:singleLine="false"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tTextView"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/vTextView"
        android:text="V"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#4D000000"
        android:gravity="center_horizontal"
        android:layout_margin="2dp"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/bTextView"
        android:gravity="center_vertical|center_horizontal"
        android:text="B"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/vTextView"
        android:layout_toEndOf="@+id/vTextView"
        android:layout_margin="2dp"
        android:background="#4D000000"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/nTextView"
        android:gravity="center_vertical|center_horizontal"
        android:text="N"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/bTextView"
        android:layout_toEndOf="@+id/bTextView"
        android:layout_margin="2dp"
        android:background="#4D000000"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/mTextView"
        android:gravity="center_vertical|center_horizontal"
        android:text="M"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/nTextView"
        android:layout_toEndOf="@+id/nTextView"
        android:clickable="false"
        android:layout_margin="2dp"
        android:background="#4D000000"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/cTextView"
        android:gravity="center_vertical|center_horizontal"
        android:text="C"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/vTextView"
        android:layout_toStartOf="@+id/vTextView"
        android:layout_margin="2dp"
        android:background="#4D000000"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/xTextView"
        android:gravity="center_vertical|center_horizontal"
        android:text="X"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/cTextView"
        android:layout_toStartOf="@+id/cTextView"
        android:layout_margin="2dp"
        android:background="#4D000000"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/zTextView"
        android:gravity="center_vertical|center_horizontal"
        android:text="Z"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/xTextView"
        android:layout_toStartOf="@+id/xTextView"
        android:layout_margin="2dp"
        android:background="#4D000000"
        />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/gTextView"
        android:gravity="center_vertical|center_horizontal"
        android:text="G"
        android:textSize="30sp"
        android:layout_above="@+id/vTextView"
        android:layout_centerHorizontal="true"
        android:background="#4D000000"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/hTextView"
        android:gravity="center_vertical|center_horizontal"
        android:text="H"
        android:textSize="30sp"
        android:layout_above="@+id/bTextView"
        android:layout_alignLeft="@+id/bTextView"
        android:layout_alignStart="@+id/bTextView"
        android:background="#4D000000"
        android:layout_marginLeft="0dp"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/jTextView"
        android:gravity="center_vertical|center_horizontal"
        android:text="J"
        android:textSize="30sp"
        android:layout_above="@+id/nTextView"
        android:layout_toRightOf="@+id/bTextView"
        android:layout_toEndOf="@+id/bTextView"
        android:background="#4D000000"
        android:layout_marginLeft="2dp"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/kTextView"
        android:gravity="center_vertical|center_horizontal"
        android:text="K"
        android:textSize="30sp"
        android:layout_above="@+id/mTextView"
        android:layout_alignLeft="@+id/mTextView"
        android:layout_alignStart="@+id/mTextView"
        android:background="#4D000000"
        android:layout_marginLeft="0dp"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/lTextView"
        android:gravity="center_vertical|center_horizontal"
        android:text="L"
        android:textSize="30sp"
        android:layout_above="@+id/mTextView"
        android:layout_toRightOf="@+id/mTextView"
        android:layout_toEndOf="@+id/mTextView"
        android:background="#4D000000"
        android:layout_marginLeft="2dp"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/fTextView"
        android:gravity="center_vertical|center_horizontal"
        android:text="F"
        android:textSize="30sp"
        android:layout_above="@+id/cTextView"
        android:layout_alignRight="@+id/cTextView"
        android:layout_alignEnd="@+id/cTextView"
        android:background="#4D000000"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/dTextView"
        android:gravity="center_vertical|center_horizontal"
        android:text="D"
        android:textSize="30sp"
        android:layout_above="@+id/xTextView"
        android:layout_alignRight="@+id/xTextView"
        android:layout_alignEnd="@+id/xTextView"
        android:layout_margin="0dp"
        android:background="#4D000000"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/sTextView"
        android:gravity="center_vertical|center_horizontal"
        android:text="S"
        android:textSize="30sp"
        android:layout_above="@+id/zTextView"
        android:layout_alignRight="@+id/zTextView"
        android:layout_alignEnd="@+id/zTextView"
        android:layout_margin="0dp"
        android:background="#4D000000"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/aTextView"
        android:gravity="center_vertical|center_horizontal"
        android:text="A"
        android:textSize="30sp"
        android:layout_above="@+id/zTextView"
        android:layout_toLeftOf="@+id/zTextView"
        android:layout_toStartOf="@+id/zTextView"
        android:background="#4D000000"
        android:layout_marginRight="1dp"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/tTextView"
        android:gravity="center_vertical|center_horizontal"
        android:text="T"
        android:textSize="30sp"
        android:layout_above="@+id/gTextView"
        android:layout_alignRight="@+id/gTextView"
        android:layout_alignEnd="@+id/gTextView"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:background="#4D000000"
        />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/yTextView"
        android:gravity="center_vertical|center_horizontal"
        android:text="Y"
        android:textSize="30sp"
        android:layout_toEndOf="@+id/fTextView"
        android:layout_alignTop="@+id/tTextView"
        android:layout_toRightOf="@+id/fTextView"
        android:layout_marginLeft="25dp"
        android:background="#4D000000"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/uTextView"
        android:gravity="center_vertical|center_horizontal"
        android:text="U"
        android:textSize="30sp"
        android:layout_above="@+id/hTextView"
        android:layout_toRightOf="@+id/yTextView"
        android:layout_toEndOf="@+id/yTextView"
        android:layout_marginBottom="2dp"
        android:background="#4D000000"
        android:layout_marginLeft="4dp"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/iTextView"
        android:gravity="center_vertical|center_horizontal"
        android:text="I"
        android:textSize="30sp"
        android:layout_above="@+id/jTextView"
        android:layout_toRightOf="@+id/uTextView"
        android:layout_toEndOf="@+id/uTextView"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="4dp"
        android:background="#4D000000"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/oTextView"
        android:gravity="center_vertical|center_horizontal"
        android:text="O"
        android:textSize="30sp"
        android:layout_above="@+id/kTextView"
        android:layout_toRightOf="@+id/iTextView"
        android:layout_toEndOf="@+id/iTextView"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="4dp"
        android:background="#4D000000"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/pTextView"
        android:gravity="center_vertical|center_horizontal"
        android:text="P"
        android:textSize="30sp"
        android:layout_above="@+id/lTextView"
        android:layout_toRightOf="@+id/oTextView"
        android:layout_toEndOf="@+id/oTextView"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="4dp"
        android:background="#4D000000"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/rTextView"
        android:gravity="center_vertical|center_horizontal"
        android:text="R"
        android:textSize="30sp"
        android:layout_above="@+id/fTextView"
        android:layout_toLeftOf="@+id/tTextView"
        android:layout_toStartOf="@+id/tTextView"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:background="#4D000000"
        android:layout_marginRight="2dp"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/eTextView"
        android:gravity="center_vertical|center_horizontal"
        android:text="E"
        android:textSize="30sp"
        android:layout_above="@+id/dTextView"
        android:layout_toLeftOf="@+id/rTextView"
        android:layout_toStartOf="@+id/rTextView"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:background="#4D000000"
        android:layout_marginRight="2dp"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/wTextView"
        android:gravity="center_vertical|center_horizontal"
        android:text="W"
        android:textSize="30sp"
        android:layout_above="@+id/sTextView"
        android:layout_toLeftOf="@+id/eTextView"
        android:layout_toStartOf="@+id/eTextView"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:background="#4D000000"
        android:layout_marginRight="2dp"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/qTextView"
        android:gravity="center"
        android:text="Q"
        android:textSize="30sp"
        android:layout_above="@+id/aTextView"
        android:layout_toLeftOf="@+id/wTextView"
        android:layout_toStartOf="@+id/wTextView"
        android:layout_marginBottom="2dp"
        android:background="#4D000000"
        android:layout_marginRight="2dp"
        android:singleLine="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerVertical="true"
        android:autoText="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Guest!"
        android:id="@+id/usernameTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:singleLine="false"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 99999"
        android:id="@+id/scoreTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textIsSelectable="false"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heroImageView"
        android:src="@drawable/adventurer"
        android:layout_alignLeft="@+id/pTextView"
        android:layout_alignStart="@+id/pTextView"
        android:layout_above="@+id/pTextView"
        android:layout_below="@+id/scoreTextView"
        android:layout_marginTop="5dp"
        android:focusable="false"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/evilGuyImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/palach"
        android:layout_toStartOf="@+id/wTextView"
        android:layout_above="@+id/wTextView"
        android:layout_below="@+id/usernameTextView"
        android:layout_alignRight="@+id/usernameTextView"
        android:layout_alignEnd="@+id/usernameTextView"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_alignRight="@+id/heroImageView"
        android:layout_alignLeft="@+id/heroImageView"
        android:layout_alignTop="@+id/heroImageView"
        android:layout_alignBottom="@+id/heroImageView"
        android:src="@drawable/rope1"/>

</RelativeLayout>
