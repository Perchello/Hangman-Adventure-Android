<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/papertexture"
                tools:context="perchello.hangman.UI.LoginActivity"
                android:id="@+id/loginLayout">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your login details"
        android:id="@+id/loginTextView"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences|textPersonName"
        android:ems="10"
        android:id="@+id/usernameLoginEditText"
        android:layout_below="@+id/loginTextView"
        android:layout_centerHorizontal="true"
        android:hint="Username"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/loginTextView"
        android:layout_alignRight="@+id/loginTextView"
        android:singleLine="true"
        android:capitalize="words"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordLoginEditText"
        android:layout_below="@+id/usernameLoginEditText"
        android:layout_centerHorizontal="true"
        android:layout_alignRight="@+id/usernameLoginEditText"
        android:layout_alignLeft="@+id/usernameLoginEditText"
        android:hint="Password"
        android:capitalize="words"
        android:singleLine="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/loginButton"
        android:layout_below="@+id/passwordLoginEditText"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/usernameLoginEditText"
        android:layout_alignRight="@+id/usernameLoginEditText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up for free!"
        android:id="@+id/signupLoginTextView"
        android:layout_below="@+id/loginButton"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:id="@+id/resetPasswordLoginTextView"
        android:layout_below="@+id/signupLoginTextView"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginProgress"
        android:layout_above="@+id/loginButton"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

</RelativeLayout>
