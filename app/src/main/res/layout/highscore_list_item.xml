<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:background = "@android:color/holo_orange_dark"
                android:paddingRight="40dp"
                android:paddingLeft="40dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/highscorePlaceLabel"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:text="100."
        android:textSize="15sp"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/highscoreNameLabel"
        android:layout_alignParentTop="false"
        android:layout_toRightOf="@+id/highscorePlaceLabel"
        android:layout_toEndOf="@+id/highscorePlaceLabel"
        tools:text="Perchello"
        android:layout_marginLeft="5dp"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="false"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/highscoreScoreLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:text="50000"
        android:textSize="15sp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        />
</RelativeLayout>